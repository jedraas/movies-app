<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.filmy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="digUpMovie"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MovieDetailActivity"></activity>
        <activity android:name=".SearchMoviesActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".FavouritesMoviesActivity" />
        <activity android:name=".NowPlayingMoviesActivity" />
        <activity android:name=".TopRatedMoviesActivity" />
        <activity android:name=".UpcomingMoviesActivity" />
        <activity android:name=".RecommendedMoviesActivity" />


        <activity android:name=".PopularMoviesActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>